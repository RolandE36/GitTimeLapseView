<Window x:Class="WpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUI"
        mc:Ignorable="d"
        Title="Git Time Lapse View" Height="350" Width="525">
	<Grid>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"></ColumnDefinition>
			<ColumnDefinition Width="30"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="25"></RowDefinition>
			<RowDefinition Height="auto"></RowDefinition>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="50"></RowDefinition>
		</Grid.RowDefinitions>

		<Button
			Name="btnIncrementalViewMode"
			Grid.Column="0"
			Grid.Row="0"
			Grid.ColumnSpan="2"
			Width="20"
			HorizontalAlignment="Left"
			Margin="2,2,2,2"
			Content="I"
			ToolTip="Incremental View Mode"
			Click="btnIncrementalViewMode_Click"
		/>

		<Button
			Name="btnTimeLapseViewMode"
			Grid.Column="0"
			Grid.Row="0"
			Grid.ColumnSpan="2"
			Width="20"
			HorizontalAlignment="Left"
			Margin="27,2,2,2"
			Content="T"
			ToolTip="Time Lapse View Mode"
			Click="btnTimeLapseViewMode_Click"
		/>

		<Button
			Name="btnBrowseFile"
			Grid.Column="0"
			Grid.Row="0"
			Grid.ColumnSpan="2"
			Width="20"
			HorizontalAlignment="Left"
			Margin="52,2,2,2"
			Content="..."
			ToolTip="Browse File"
			Click="btnBrowseFile_Click"
		/>
		<Label
			Name="lblFilePath"
			Grid.Column="0"
			Grid.Row="0"
			Grid.ColumnSpan="2" 
			Margin="75,0,0,0"
		/>

		<Slider 
			Name="slHistoy"
			TickPlacement="BottomRight" 
			IsSnapToTickEnabled="True" 
			ValueChanged="slHistoyValueChanged"

			IsSelectionRangeEnabled="True"  
			Foreground="Blue"
			
			Grid.Column="0" 
			Grid.Row="1" 
		/>
		<TextBox 
			Text="{Binding ElementName=slHistoy, Path=Value, UpdateSourceTrigger=PropertyChanged}" 
			DockPanel.Dock="Right" 
			Grid.Column="1" 
			Grid.Row="1" />

		<Grid Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="4*" />
			</Grid.ColumnDefinitions>

			<ListView
				x:Name="lvVerticalHistoryPanel" 
				HorizontalAlignment="Left" 
				VerticalAlignment="Top" 
				Grid.Column="0"
			>
				<ListView.View>
					<GridView>
						<GridViewColumn DisplayMemberBinding="{Binding Commit.AuthorInitials}">AU</GridViewColumn>
						<GridViewColumn DisplayMemberBinding="{Binding Commit.DescriptionShort}" Width="Auto">Message</GridViewColumn>
						<GridViewColumn DisplayMemberBinding="{Binding Commit.DateString}">Date</GridViewColumn>
						<GridViewColumn DisplayMemberBinding="{Binding Commit.Sha}">Commit</GridViewColumn>
					</GridView>
				</ListView.View>
			</ListView>

			<GridSplitter Grid.Column="1" ShowsPreview="False" Width="3" HorizontalAlignment="Center" VerticalAlignment="Stretch" />

			<avalonEdit:TextEditor xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
				Name="tbCode" 
				FontFamily="Consolas"
				SyntaxHighlighting="C#"
				FontSize="10pt"
				ShowLineNumbers="True"
				Text="" 
				IsReadOnly="True" 
				HorizontalScrollBarVisibility="Auto" 
				VerticalScrollBarVisibility="Visible"
				Grid.Column="2"					
				MouseDoubleClick="tbCode_MouseDoubleClick" 
				HorizontalContentAlignment="Stretch" 
				VerticalContentAlignment="Stretch"
			/>
		</Grid>

		<Label 
			Name="lblCommitDetailsSection"
			Visibility="Hidden"
			Grid.Column="0"
			Grid.Row="3"
			Grid.ColumnSpan="2">
			<TextBlock>
				<Run Text="Commit   " Foreground="Gray"/>
				<Run Name="lblCommitSha" Text=""/>
				<Run Text="at" Foreground="Gray"/>
				<Run Name="lblCommitDate" Text=""/>
				<Run Text="by" Foreground="Gray"/>
				<Run Name="lblCommitAuthor" Text=""/>
				<Run Name="lblCommitMessageLabel" Text="Message" Foreground="Gray"/>
				<Run Name="lblCommitMessageText" Text=""/>
			</TextBlock>
		</Label>
	</Grid>
</Window>
